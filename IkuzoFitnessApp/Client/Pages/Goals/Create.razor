@page "/goals/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Goal Creation</h3>
<hr />
<br />

<FormComponent ButtonText="Create Goal" goal="goal" OnValidSubmit="@CreateGoal" />

@code {
    Goal goal = new Goal();

    private async Task CreateGoal()
    {
        await _client.PostAsJsonAsync(Endpoints.GoalsEndpoint, goal);
        _navManager.NavigateTo("/goals/");
    }

}

