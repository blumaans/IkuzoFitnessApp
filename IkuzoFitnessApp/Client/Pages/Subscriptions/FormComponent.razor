<EditForm Model="@subscription" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
     <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Start Date: </label>
            <div>
                <InputDate @bind-Value="@subscription.StartDate" class="form-control" />
                <ValidationMessage For="@(() => subscription.StartDate)" />
            </div>
        </div>
        <div class="form-group">
            <label>End Date: </label>
            <div>
                <InputDate @bind-Value="@subscription.EndDate" class="form-control" />
                <ValidationMessage For="@(() => subscription.EndDate)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="subscriptions" />
</EditForm>

@code {
    [Parameter] public Subscription? subscription { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
