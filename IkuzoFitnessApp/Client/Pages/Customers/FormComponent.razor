<EditForm Model="@customer" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Weight(Kg): </label>
            <div>
                <InputNumber @bind-Value="customer.Weight" class="form-control" />
                <ValidationMessage For="@(() => customer.Weight)" />
            </div>
        </div>
        <div class="form-group">
            <label>Height(m): </label>
            <div>
                <InputNumber @bind-Value="customer.Height" class="form-control" />
                <ValidationMessage For="@(() => customer.Height)" />
            </div>
        </div>
        <div class="form-group">
            <label>Gender: </label>
            <div>
                <InputSelect @bind-Value="customer.Gender" class="form-control">
                    <option value="0">--Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </InputSelect>
                <ValidationMessage For="@(() => customer.Gender)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="customers" />
</EditForm>

@code {
    [Parameter] public Customer? customer { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
