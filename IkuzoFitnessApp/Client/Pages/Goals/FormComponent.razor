<EditForm Model="@goal" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Metric: </label>
            <div>
                <InputText @bind-Value="goal.TargetMetric" class="form-control" />
                <ValidationMessage For="@(() => goal.TargetMetric)" />
            </div>
        </div>
        <div class="form-group">
            <label>Value(Kg): </label>
            <div>
                <InputNumber @bind-Value="goal.TargetValue" class="form-control" />
                <ValidationMessage For="@(() => goal.TargetValue)" />
            </div>
        </div>
        <div class="form-group">
            <label>Start Date: </label>
            <div>
                <InputDate @bind-Value="@goal.StartDate" class="form-control" />
                <ValidationMessage For="@(() => goal.StartDate)" />
            </div>
        </div>
        <div class="form-group">
            <label>End Date: </label>
            <div>
                <InputDate @bind-Value="@goal.EndDate" class="form-control" />
                <ValidationMessage For="@(() => goal.EndDate)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="goals" />
</EditForm>

@code {
    [Parameter] public Goal? goal { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
